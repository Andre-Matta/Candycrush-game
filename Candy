package javafxapplication2;

import java.beans.EventHandler;
import javafx.event.ActionEvent;
import javafx.scene.control.Button;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.TilePane;

/**
 *
 * @author Maria
 */
public class Candy {
     public  String candy_image ;
     public int type =(int)(6 * Math.random()); 
     public int x ;
     public int y ;
     public ImageView image_view = new ImageView(); 
     static int count =0;
    public Candy() {
      
    }
    public void setImage_view(ImageView image_view) {
       
        this.image_view = image_view;
    }

    public ImageView getImage_view() {
         String s = this.getCandy_image();
        Image image = new Image(s);
        this.image_view = new ImageView(image);
        return image_view;
    }
     public void on_click(){
          this.image_view.setOnMouseClicked(event ->  {
                count++;
                });
     } 
       public void on_click2(Candy c){
          this.image_view.setOnMouseClicked(event ->  {
                count++;
                this.swapCandy(c);
                 
                });
     } 
     
   

    public String getCandy_image() {
       
         if (this.type == 1){
                 this.candy_image = "Images/Red.png";
                } 
               else if ( this.type == 2){
                  this.candy_image = "Images/Yellow.png";
                } 
               else if ( this.type == 3){
                  this.candy_image = "Images/Green.png";
                } 
                else if ( this.type == 4){
                  this.candy_image = "Images/Blue.png";
                } 
                else if ( this.type == 5){
                  this.candy_image  = "Images/Purple.png";
                } 
                else if ( this.type == 0){
                  this.candy_image = "Images/Orange.png";
                } 
        return candy_image;
    }

  

    public void setType(int type) {
        this.type = type;
    }

    public int getType() {
        return type;
    }

    public void setX(int x) {
        this.x = x;
    }

    public void setY(int y) {
        this.y = y;
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }
    
    public  ImageView draw_candy (){   
       
        String s = this.getCandy_image();
        Image image = new Image(s);
        ImageView imageView = new ImageView(image);
       
               return imageView ;
    }
    
     public void swapCandy(Candy c1 ) {
		Candy temp = new Candy();
                      temp.x = c1.x;
                      temp.x =c1.y;
                      temp.candy_image=c1.candy_image;
                      temp.type=c1.type;
                c1.x = this.x;
                c1.y = this.y;
                c1.candy_image = this.candy_image;
                c1.type = this .type;
		this.x = temp.x;
                this.y = temp.y;
                this.candy_image = temp.candy_image;
                this.type = temp.type;
                
	}
      public void copy (Candy c ) {
		
                this.x=c.x ;
                this.y = c.y;
		this.type = c.type;
              this.candy_image = c.candy_image;
	}
      public void delete(){
          this.type = -1;
          this.candy_image = " ";
          this.x =-1;
          this.y = -1;
      }
}
