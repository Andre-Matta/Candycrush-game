package javafxapplication2;

import java.beans.EventHandler;
import javafx.event.ActionEvent;
import javafx.scene.control.Button;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.TilePane;

/**
 *
 * @author Maria
 */

public class Candy {
    static final Image Red = new Image("Images/Red.png");
    static final Image Yellow = new Image("Images/Yellow.png");
    static final Image Green = new Image("Images/Green.png");
    static final Image Blue = new Image("Images/Blue.png");
    static final Image Purple = new Image("Images/Purple.png");
    static final Image Orange = new Image("Images/Orange.png");
    public int type =(int)(6 * Math.random());
    public int x ;
    public int y ;
    public ImageView image_view = new ImageView();
    static int count =0;

    public Candy() { }

    public ImageView getImage_view() {
        if (this.type == 1){
            this.image_view = new ImageView(Red);
        }
        else if ( this.type == 2){
            this.image_view = new ImageView(Yellow);
        }
        else if ( this.type == 3){
            this.image_view = new ImageView(Green);
        }
        else if ( this.type == 4){
            this.image_view = new ImageView(Blue);
        }
        else if ( this.type == 5){
            this.image_view = new ImageView(Purple);
        }
        else if ( this.type == 0){
            this.image_view = new ImageView(Orange);
        }
        return image_view;
    }

   public void swapCandy(Candy c1) {
        Candy temp = new Candy();
        temp.type=c1.type;
        temp.x = c1.x;
        temp.y=c1.y;
        c1.type = this.type;
        c1.getImage_view();
        c1.x = this.x;
        c1.y = this.y;
/*        System.out.println(c1.x);
        System.out.println(c1.x);*/
        this.type = temp.type;
        this.getImage_view();
       this.x = temp.x;
        this.y = temp.y;
/*        System.out.println(this.x);
        System.out.println(this.y);*/


    }

    public void copy (Candy c ) {

        this.x=c.x ;
        this.y = c.y;
        this.type = c.type;
        this.image_view = c.image_view;
    }

    public void delete(){
        this.type = -1;
        this.x =-1;
        this.y = -1;
    }
}
